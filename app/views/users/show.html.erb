<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @profile.avatar.url, class: 'avatar-show-img' %>
    </div>
    <div class="col-md-6">
      <h1><%= @profile.first_name %> <%= @profile.last_name %></h1>
      <h3><%= @profile.job_title %></h3>
      <div class="well profile-block profile-description">
        <h3>Description</h3>
        <%= @profile.description %>
      </div>
      <% if current_user.plan_id == 2 %>
        <div class="well profile-block profile-contact-info">
          <h3>Contact information</h3>
          <%= @profile.phone_number %><br>
          <%= @profile.contact_email %>
        </div>
      <% end %>
    </div>
  </div>
</div>
